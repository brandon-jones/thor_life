%table.table.no-margin#main-table
  %tbody
    %tr
      - if current_user && current_user.super_admin?
        %td.remove-border.new-group-row
          .row
            .col-sm-2
              %button.btn.btn-xs.btn-default.new-group-toggle.inline{"aria-expanded" => "false", :type => "button", data: { parent_id: "#{this_forum.id}" }}
                New Grouping
            .col-sm-10
              #new-group-forum{hidden: true}
                = render partial: 'groupings/form', locals: { grouping: @new_grouping, forum_id: this_forum.id }
    - counter = 0
    - last = groups.count - 1
    - groups.each do |forum_group|
      - movabled_in = [ counter == 0 ? '' : 'up', counter == last ? '' : 'down' ]
      - if (current_user && current_user.super_admin?) || (forum_group.forums.count > 0) || (forum_group.title == 'nil' && forums.keys.include?('nil'))
        = render partial: 'forums/forums_grouping', locals: { forum_group: forum_group, this_forum: this_forum, forums: forums, movabled_in: movabled_in, position: counter }
      - counter += 1