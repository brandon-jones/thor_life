%h1.text-center #{@this_forum.title}
=flash_msg
= render_breadcrumbs
%input{:type => "hidden", :value => "#{@this_forum.id || 'nil'}", :id =>'forum_id'}
.row
  .col-md-12
    = render partial: 'forums/forums', locals: {groups: @groups, forums: @forums, parent_forum: @parent_forum, this_forum: @this_forum}
- if @this_forum.topics_allowed
  .row
    .col-md-12#topic_list
      = render partial: 'topics/topics', locals: {topics: @topics, new_obj: @new_topic}