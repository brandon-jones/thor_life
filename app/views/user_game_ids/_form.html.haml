= form_for(@user_game_id) do |f|
  - if @user_game_id.errors.any?
    #error_explanation
      %h2
        = pluralize(@user_game_id.errors.count, "error")
        prohibited this user_game_id from being saved:
      %ul
        - @user_game_id.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.label :game_id
    = f.select :game_id, options_for_select(@games), {}, class: 'form-control'
  .form-group
    = f.label :in_game_name
    = f.text_field :in_game_name, class: 'form-control'
  .form-group
    = f.label :user_id
    = f.select :user_id, options_for_select(@user), {}, class: 'form-control'
  .actions
    = f.submit 'Create Gamer ID', class: 'btn btn-default'
