= form_for(@grouping) do |f|
  - if @grouping.errors.any?
    #error_explanation
      %h2
        = pluralize(@grouping.errors.count, "error")
        prohibited this grouping from being saved:
      %ul
        - @grouping.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .actions
    = f.submit
