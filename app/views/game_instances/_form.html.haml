= form_for(@game_instance) do |f|
  - if @game_instance.errors.any?
    #error_explanation
      %h2
        = pluralize(@game_instance.errors.count, "error")
        prohibited this game_instance from being saved:
      %ul
        - @game_instance.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :game_id
    %br/
    = f.number_field :game_id
  .field
    = f.label :server_name
    %br/
    = f.text_field :server_name
  .field
    = f.label :server_address
    %br/
    = f.text_field :server_address
  .field
    = f.label :server_port
    %br/
    = f.number_field :server_port
  .field
    = f.label :mod_list
    %br/
    = f.text_area :mod_list
  .actions
    = f.submit
