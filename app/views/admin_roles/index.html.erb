<p id="notice"><%= notice %></p>

<h1>Listing Admin Roles</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Admin type</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_roles.each do |admin_role| %>
      <tr>
        <td><%= admin_role.user_id %></td>
        <td><%= admin_role.admin_type %></td>
        <td><%= admin_role.admin_id %></td>
        <td><%= link_to 'Show', admin_role %></td>
        <td><%= link_to 'Edit', edit_admin_role_path(admin_role) %></td>
        <td><%= link_to 'Destroy', admin_role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

