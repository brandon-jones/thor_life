=flash_msg
= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message
  .form-group.has-feedback#username-textfield
    = f.label 'User Name'
    %small#username-notice
      &nbsp;
    %br
      = f.text_field :username, class: 'form-control', id: 'username-creation'
  .form-group
    = f.label t('user.email')
    %br
      = f.text_field :email, class: 'form-control'
  .form-group
    = f.label t('user.password')
    %br
      = f.password_field :password, class: 'form-control'
  .form-group
    = f.label t('user.password_confirmation')
    %br
      = f.password_field :password_confirmation, class: 'form-control'
  .form-group
    = f.submit t('submit'), class: 'btn btn-primary btn-lg'