%h1.text-center
  =t('listing_users')
=flash_msg
%table.table.table-striped.table-bordered
  %thead
    %tr
      %th.text-center
        =t('user.username')
      %th.text-center
        =t('user.email')
      %th.text-center
        =t('user.banned')
      %th{:colspan => "3"}
  %tbody
    - @users.each do |user|
      %tr
        %td
          - if current_user == user
            %span.glyphicon.glyphicon-star{"aria-hidden" => "true"}
          = user.username
        %td= user.email
        %td.text-center
          - if user.banned
            %span.glyphicon.glyphicon-remove-sign.red.lg-glyphicon{"aria-hidden" => "true"}
          - else
            %span.glyphicon.glyphicon-ok-sign.green.lg-glyphicon{"aria-hidden" => "true"}
        %td.text-center= link_to t('details'), user, class: 'btn btn-primary'
        %td.text-center= link_to t('edit'), edit_user_path(user), class: 'btn btn-default'
        %td.text-center= link_to t('destroy'), user, method: :delete, data: { confirm: t('are_you_sure') }, class: 'btn btn-danger'
%br