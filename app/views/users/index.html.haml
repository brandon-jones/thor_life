%p#notice= notice
%h1 Listing Users
%table.table.table-striped.table-bordered
  %thead
    %tr
      %th UserName
      %th Email
      %th{:colspan => "3"}
  %tbody
    - @users.each do |user|
      %tr
        %td= user.username
        %td= user.email
        %td= link_to 'Show', user, class: 'btn btn-primary'
        %td= link_to 'Edit', edit_user_path(user), class: 'btn btn-default'
        %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'
%br
  = link_to 'New User', new_user_path