= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.label t('username')
    %small
    %br
      = f.text_field :username, class: 'form-control'
  .form-group
    = f.label :password
    %br
      = f.text_field :password_digest, class: 'form-control'
  .form-group
    = f.label :password_confirmation
    %br
      = f.text_field :password_digest, class: 'form-control'
  .form-group
    = f.label :email
    %br
      = f.text_field :email, class: 'form-control'
  .form-group
    = f.label :phone_number
    %br
      = f.text_field :phone_number, class: 'form-control'
  .form-group
    = f.label :phone_provider
    %br
      = f.text_field :phone_provider, class: 'form-control'
  .form-group
    = f.label :about_me
    %br
      = f.text_area :about_me, class: 'form-control'
  .actions
    = f.submit t('submit'), class: 'btn btn-primary btn-lg'