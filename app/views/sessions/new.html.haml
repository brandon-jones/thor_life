%h1 
  =t('login')
= form_tag '/login' do
  .form-group
    %strong
      =t('user.email')
    =text_field_tag :email,nil ,class: 'form-control'
  .form-group
    %strong
      =t('user.password')
    = password_field_tag :password, nil,class: 'form-control'
  .form-group
    =submit_tag t('login'), class: 'btn btn-primary btn-lg'