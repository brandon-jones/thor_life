              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li
                = link_to 'Cart', carts_path
              %li
                %a{:href => "#"} Another action
              %li
                %a{:href => "#"} Something else here
              %li.divider
              %li
                %a{:href => "#{user_path(current_user.id)}"} 
                  = current_user.username
              %li.divider
              %li
                %a{:href => "#{logout_path}"} 
                  = t('logout')