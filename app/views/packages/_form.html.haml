= form_for(@package) do |f|
  - if @package.errors.any?
    #error_explanation
      %h2
        = pluralize(@package.errors.count, "error")
        prohibited this package from being saved:
      %ul
        - @package.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :price
    %br/
    = f.text_field :price
  .field
    = f.label :perk_ids
    %br/
    = f.text_field :perk_ids
  .actions
    = f.submit
